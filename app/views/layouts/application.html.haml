!!!
%html
  %head
    %title
      - if @conference.new_record?
        frab
      - else
        = @conference.title
        - if @event.present?
          \-
          = @event.title
        - elsif @person.present?
          \-
          = @person.full_name
      \- Conference Management

    = stylesheet_link_tag "application", "admin"
    = javascript_include_tag "application", "admin"
    = csrf_meta_tags
  %body
    .topbar
      .fill
        .container
          - if @conference.new_record?
            = link_to "Welcome to frab", root_path, class: "brand"
          - else
            = link_to @conference.title, conference_crew_path, class: "brand"
          %ul.nav
            - unless @conference.new_record?
              = render 'shared/navi_conference'
          %ul.nav.secondary-nav.pull-right
            = render 'shared/navi_conferences_menu'
            = render 'shared/navi_account_menu'
    .container
      .main-content
        = render 'shared/flash', flash: flash
        = yield
    %footer.footer
      .container
